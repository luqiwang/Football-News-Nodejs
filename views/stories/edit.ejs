<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= story.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/stories/<%= story._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="story[name]" value="<%= story.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="story[image]" value="<%= story.image %>">
                </div>
                <div class="form-group">
                    <textarea rows = "13" class="form-control" name="story[description]">
                        <%= story.description %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/stories">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>